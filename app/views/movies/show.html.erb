<div class="container my-5 d-flex justify-content-center">
  <div class="d-flex">
    <div class="card-movie me-1">
      <%= image_tag(@movie.poster_url) %>
    </div>
    <div class="card-movie movie-text">
      <div class="d-flex justify-content-between">
        <h1><%= @movie.title %></h1>
        <div class="ps-4">
          <i class="fas fa-star mx-1"></i>
          <p><%= @movie.rating %></p>
        </div>
      </div>
      <p class="mt-3"><%= @movie.overview %></p>
    </div>
  </div>
</div>
